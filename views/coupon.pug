extends layout

block head
	link(rel='stylesheet' , href='stylesheets/coupon.css')

block content
	form
		input.form-control(type='text', placeholder='Search coupons...')
	.card-columns
		for coupon, c in coupons
			.col-md-3
				.card
					img.card-img-top(src='https://promohunter-merchantstation.herokuapp.com/'+coupon.picture)
					.card-body
						h5.card-title= coupon.campaign
						p.card-text= coupon.description
					.card-footer
						small.text-muted= coupon.expiryDate

