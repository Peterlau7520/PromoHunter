extends layout

block head
	link(rel='stylesheet', href='/stylesheets/changepassword.css')

block content
	.frame
		form(method='POST', action='/account/changepassword')
			.form-group.col-md-12
				label Old password
				input.form-control(type='password', name='oldpw')
			.form-group.col-md-12
				label New password
				input.form-control(type='password', name='newpw')
			label #{msg}
			.form-group.bottom.col-md-12
				input.btn(type='submit', value='Submit')

block js